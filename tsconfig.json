// https://github.com/ltsSmitty/OpenRCT2-Simple-Typescript-Template-Async/blob/main/tsconfig.json
{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "strict": true,
    "target": "es5",
    "lib": ["es5", "ES2015.Promise"],
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["./remote/*"],
      "@tools/*": ["./remote/tools/*"],
      "@typedefs/*": ["./remote/types/*"],
      "@ui/*": ["./remote/ui/*"],

      "@flexui-ext/*": ["./common/flexui-extension/*"],
      "@polyfills/*": ["./common/polyfills/*"],
    }
  },
  "include": [
    "./lib/**/*.ts",
    "./src/**/*.ts",
  ]
}